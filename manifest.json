{
    "name": "thundersort",
    "description": "Sort incoming mails into account folders based on the local part",
    "version": "1",
    "applications": {
        "gecko": {
            "id": "mozilla@nwex.de",
            "strict_min_version": "91.0",
            "strict_max_version": "91.*"
        }
    },
    "permissions": [
        "messagesRead",
        "messagesMove",
        "accountsRead",
        "accountsFolders",
        "menus",
        "storage"
    ],
    "background": {
        "scripts": [
            "dist/background.js"
        ]
    },
    "options_ui": {
        "page": "dist/options/index.html",
        "open_in_tab": false,
        "browser_style": true
    },
    "manifest_version": 2
}
